{
  "name": "live2d-desktop-pet",
  "version": "1.0.0",
  "description": "Live2D桌面宠物应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": [
    "live2d",
    "electron",
    "desktop-pet"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "live2d-desktop-pet": "file:",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^6.5.10"
  },
  "build": {
    "appId": "com.example.live2d-desktop-pet",
    "productName": "Live2D Desktop Pet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.map",
      "!src/**/*",
      "!docs/**/*",
      "!README.md"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
